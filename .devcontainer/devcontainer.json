{
	"name": "My Professional Python Environment",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	
	// This command runs after the container is created.
	// It automatically installs any libraries listed in your requirements.txt file.
	"postCreateCommand": "pip install -r requirements.txt",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				// --- Core Python & AI ---
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter",
				"Google.gemini-code-assist",

				// --- Code Quality ---
				"charliermarsh.ruff",

				// --- Version Control ---
				"eamodio.gitlens",
				
				// --- Productivity & Aesthetics ---
				"aaron-bond.better-comments",
				"PKief.material-icon-theme",
				"ritwickdey.liveserver",
				"zhuangtongfa.onedark-pro" // Added One Dark Pro Theme
			]
		}
	}
}
